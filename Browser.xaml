<Window x:Class="AnimeAll.Browser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:WPF="clr-namespace:Microsoft.Toolkit.Wpf.UI.Controls;assembly=Microsoft.Toolkit.Wpf.UI.Controls.WebView"
        mc:Ignorable="d" x:Name="window" Title="Browser" Height="450" Width="800" WindowStartupLocation="CenterScreen" Closed="window_Closed">
    
    <WPF:WebView x:Name="browser" ToolTip="The browser that blocks ads and popups" 
        ContainsFullScreenElementChanged="browser_ContainsFullScreenElementChanged" Loaded="browser_Loaded"
        FrameDOMContentLoaded="browser_DOMContentLoaded" DOMContentLoaded="browser_DOMContentLoaded" ScrollViewer.VerticalScrollBarVisibility="Hidden" />

</Window>
